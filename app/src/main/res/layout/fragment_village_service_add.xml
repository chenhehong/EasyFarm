<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="?attr/windows_bg"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="下乡人员："/>
                <Button
                    android:id="@+id/btn_add_person"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="添加成员"
                    android:textColor="@android:color/black"
                    android:src="@drawable/btn_quickoption_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/person1"
                android:visibility="gone"
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="人员1："/>
                <EditText
                    android:id="@+id/et_person1"
                    android:editable="false"
                    style="@style/village_service_add_edittext"/>
                <ImageView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/btn_person1"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_delete_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/person2"
                android:visibility="gone"
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="人员2："/>
                <EditText
                    android:id="@+id/et_person2"
                    android:editable="false"
                    style="@style/village_service_add_edittext"/>
                <ImageView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/btn_person2"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_delete_icon" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/person3"
                android:visibility="gone"
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="人员3："/>
                <EditText
                    android:id="@+id/et_person3"
                    android:editable="false"
                    style="@style/village_service_add_edittext"/>
                <ImageView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/btn_person3"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_delete_icon" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/person4"
                android:visibility="gone"
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="人员4："/>
                <EditText
                    android:id="@+id/et_person4"
                    android:editable="false"
                    style="@style/village_service_add_edittext"/>
                <ImageView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/btn_person4"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_delete_icon" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/person5"
                android:visibility="gone"
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="人员5："/>
                <EditText
                    android:id="@+id/et_person5"
                    android:editable="false"
                    style="@style/village_service_add_edittext"/>
                <ImageView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/btn_person5"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_delete_icon" />
            </LinearLayout>
            <LinearLayout
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="下乡区域："/>
                <EditText
                    android:id="@+id/et_area"
                    android:editable="false"
                    style="@style/village_service_add_edittext"/>
            </LinearLayout>
            <LinearLayout
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="详细地点："/>
                <EditText
                    android:id="@+id/et_address"
                    style="@style/village_service_add_edittext"/>
            </LinearLayout>
            <LinearLayout
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="下乡事由："/>
                <EditText
                    android:id="@+id/et_reason"
                    android:lines="3"
                    style="@style/village_service_add_edittext"/>
            </LinearLayout>
            <LinearLayout
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="下乡时间："/>
                <EditText
                    android:id="@+id/et_business_date"
                    android:editable="false"
                    style="@style/village_service_add_edittext"/>
            </LinearLayout>
            <LinearLayout
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="返回时间："/>
                <EditText
                    android:id="@+id/et_return_date"
                    android:editable="false"
                    style="@style/village_service_add_edittext"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>