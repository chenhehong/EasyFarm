<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="?attr/windows_bg"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/village_service_add_layout"
                android:layout_marginTop="10dp">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="申请人："/>
                <EditText
                    android:id="@+id/et_applyman"
                    android:editable="false"
                    style="@style/village_service_add_edittext"/>
            </LinearLayout>

            <LinearLayout
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="服务人员："/>
                <Button
                    android:id="@+id/btn_add_person"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="添加成员"
                    android:textColor="@android:color/black"
                    android:src="@drawable/btn_quickoption_selector" />
            </LinearLayout>

            <LinearLayout
                style="@style/village_service_add_layout">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="是否领队"
                    android:textColor="@color/red"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_person"
                style="@style/village_service_add_layout">
                <ListView
                    android:id="@+id/lv_person"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:cacheColorHint="#ffffffff"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="?attr/lineColor"
                    android:dividerHeight="1.0px"
                    android:listSelector="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="服务区域："/>
                <EditText
                    android:id="@+id/et_area"
                    android:editable="false"
                    style="@style/village_service_add_edittext"/>
            </LinearLayout>
            <LinearLayout
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="详细地点："/>
                <EditText
                    android:id="@+id/et_address"
                    style="@style/village_service_add_edittext"/>
            </LinearLayout>
            <LinearLayout
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="服务方式："/>
                <EditText
                    android:id="@+id/et_reason"
                    android:lines="2"
                    style="@style/village_service_add_edittext"
                    android:enabled="false"/>
                <Button
                    android:id="@+id/btn_add_reason"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="选择方式"
                    android:textColor="@android:color/black"
                    android:src="@drawable/btn_quickoption_selector" />
            </LinearLayout>
            <LinearLayout
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="服务类型："/>
                <Spinner
                    android:id="@+id/sp_server_type"
                    style="@style/spinner_style"/>
            </LinearLayout>
            <LinearLayout
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="服务时间："/>
                <EditText
                    android:id="@+id/et_business_date"
                    android:editable="false"
                    style="@style/village_service_add_edittext"/>
            </LinearLayout>
            <LinearLayout
                style="@style/village_service_add_layout">
                <TextView
                    style="@style/village_service_add_left_textview"
                    android:text="返回时间："/>
                <EditText
                    android:id="@+id/et_return_date"
                    android:editable="false"
                    style="@style/village_service_add_edittext"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                style="@style/button_common_blue"
                android:layout_marginTop="20dp"
                android:text="提交" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>