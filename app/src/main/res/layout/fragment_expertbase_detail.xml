<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="?attr/windows_bg"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                style="@style/detail_list_layout">
                <TextView
                    style="@style/detail_list_left_textview"
                    android:text="专家姓名："/>
                <TextView
                    style="@style/detail_list_right_textview"
                    android:id="@+id/tv_realname"
                    android:text="" />
            </RelativeLayout>

            <View
                style="@style/h_line" />

            <RelativeLayout
                style="@style/detail_list_layout">
                <TextView
                    style="@style/detail_list_left_textview"
                    android:text="专家性别："/>
                <TextView
                    style="@style/detail_list_right_textview"
                    android:id="@+id/tv_gender"
                    android:text="" />
            </RelativeLayout>

            <View
                style="@style/h_line" />

            <RelativeLayout
                style="@style/detail_list_layout">
                <TextView
                    style="@style/detail_list_left_textview"
                    android:text="单位："/>
                <TextView
                    style="@style/detail_list_right_textview"
                    android:id="@+id/tv_organization"
                    android:text="" />
            </RelativeLayout>

            <View
                style="@style/h_line" />

            <RelativeLayout
                style="@style/detail_list_layout">
                <TextView
                    style="@style/detail_list_left_textview"
                    android:text="技术类别："/>
                <TextView
                    style="@style/detail_list_right_textview"
                    android:id="@+id/tv_techtype"
                    android:text="" />
            </RelativeLayout>

            <View
                style="@style/h_line" />

            <RelativeLayout
                style="@style/detail_list_layout">
                <TextView
                    style="@style/detail_list_left_textview"
                    android:text="邮箱："/>
                <TextView
                    style="@style/detail_list_right_textview"
                    android:id="@+id/tv_email"
                    android:text="" />
            </RelativeLayout>

            <View
                style="@style/h_line" />

            <RelativeLayout
                style="@style/detail_list_layout">
                <TextView
                    style="@style/detail_list_left_textview"
                    android:text="描述："/>
                <TextView
                    style="@style/detail_list_right_textview"
                    android:id="@+id/tv_description"
                    android:text="" />
            </RelativeLayout>

            <View
                style="@style/h_line" />

        </LinearLayout>

    </ScrollView>

    <com.scau.easyfarm.ui.empty.EmptyLayout
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>