<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?attr/layout_item_bg"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/row1"
            android:visibility="gone"
            style="@style/functionLayoutRow">
            <LinearLayout
                android:id="@+id/layout1"
                style="@style/functionLayoutColumn">
                <ImageView
                    android:id="@+id/icon1"
                    style="@style/functionIcon"/>
                <TextView
                    android:id="@+id/iconText1"
                    style="@style/functionIconText"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout2"
                style="@style/functionLayoutColumn">
                <ImageView
                    android:id="@+id/icon2"
                    style="@style/functionIcon"/>
                <TextView
                    android:id="@+id/iconText2"
                    style="@style/functionIconText"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout3"
                style="@style/functionLayoutColumn">
                <ImageView
                    android:id="@+id/icon3"
                    style="@style/functionIcon"/>
                <TextView
                    android:id="@+id/iconText3"
                    style="@style/functionIconText"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout4"
                style="@style/functionLayoutColumn">
                <ImageView
                    android:id="@+id/icon4"
                    style="@style/functionIcon"/>
                <TextView
                    android:id="@+id/iconText4"
                    style="@style/functionIconText"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:visibility="gone"
            style="@style/functionLayoutRow">
            <LinearLayout
                android:id="@+id/layout5"
                style="@style/functionLayoutColumn">
                <ImageView
                    android:id="@+id/icon5"
                    style="@style/functionIcon"/>
                <TextView
                    android:id="@+id/iconText5"
                    style="@style/functionIconText"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout6"
                style="@style/functionLayoutColumn">
                <ImageView
                    android:id="@+id/icon6"
                    style="@style/functionIcon"/>
                <TextView
                    android:id="@+id/iconText6"
                    style="@style/functionIconText"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout7"
                style="@style/functionLayoutColumn">
                <ImageView
                    android:id="@+id/icon7"
                    style="@style/functionIcon"/>
                <TextView
                    android:id="@+id/iconText7"
                    style="@style/functionIconText"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout8"
                style="@style/functionLayoutColumn">
                <ImageView
                    android:id="@+id/icon8"
                    style="@style/functionIcon"/>
                <TextView
                    android:id="@+id/iconText8"
                    style="@style/functionIconText"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>