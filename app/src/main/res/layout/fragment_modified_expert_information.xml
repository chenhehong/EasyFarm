<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="?attr/windows_bg"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/form_edit_layout">
                <TextView
                    style="@style/form_edit_left_textview"
                    android:text="性别："/>
                <Spinner
                    android:id="@+id/sp_gender"
                    style="@style/spinner_style"/>
            </LinearLayout>
            <LinearLayout
                style="@style/form_edit_layout">
                <TextView
                    style="@style/form_edit_left_textview"
                    android:text="年龄："/>
                <EditText
                    android:id="@+id/et_age"
                    style="@style/form_edit_right_edittext"/>
            </LinearLayout>
            <LinearLayout
                style="@style/form_edit_layout">
                <TextView
                    style="@style/form_edit_left_textview"
                    android:text="手机号码："/>
                <EditText
                    android:id="@+id/et_phone"
                    style="@style/form_edit_right_edittext"
                    android:hint="必填"/>
            </LinearLayout>
            <LinearLayout
                style="@style/form_edit_layout">
                <TextView
                    style="@style/form_edit_left_textview"
                    android:text="邮箱："/>
                <EditText
                    android:id="@+id/et_email"
                    style="@style/form_edit_right_edittext"
                    android:hint="必填"/>
            </LinearLayout>
            <LinearLayout
                style="@style/form_edit_layout">
                <TextView
                    style="@style/form_edit_left_textview"
                    android:text="住址："/>
                <EditText
                    android:id="@+id/et_address"
                    style="@style/form_edit_right_edittext"/>
            </LinearLayout>
            <LinearLayout
                style="@style/form_edit_layout">
                <TextView
                    style="@style/form_edit_left_textview"
                    android:text="职称："/>
                <EditText
                    android:id="@+id/et_jobposition"
                    style="@style/form_edit_right_edittext"
                    android:enabled="false"/>
                <Button
                    android:id="@+id/btn_select_jobposition"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="选择"
                    android:textColor="@android:color/black"
                    android:src="@drawable/btn_quickoption_selector" />
            </LinearLayout>
            <LinearLayout
                style="@style/form_edit_layout">
                <TextView
                    style="@style/form_edit_left_textview"
                    android:text="专长1："/>
                <EditText
                    android:id="@+id/et_techtype"
                    style="@style/form_edit_right_edittext"/>
            </LinearLayout>
            <LinearLayout
                style="@style/form_edit_layout">
                <TextView
                    style="@style/form_edit_left_textview"
                    android:text="专长2："/>
                <EditText
                    android:id="@+id/et_techtype2"
                    style="@style/form_edit_right_edittext"/>
            </LinearLayout>
            <LinearLayout
                style="@style/form_edit_layout">
                <TextView
                    style="@style/form_edit_left_textview"
                    android:text="个人简介："/>
                <EditText
                    android:id="@+id/et_description"
                    android:lines="4"
                    android:hint="请输入研究方向、研究成果等"
                    style="@style/form_edit_right_edittext"/>
            </LinearLayout>
            <LinearLayout
                style="@style/form_edit_layout">
                <TextView
                    style="@style/form_edit_left_textview"
                    android:text="用户头像："/>
                <ImageView
                    android:id="@+id/portrait"
                    android:src="@drawable/widget_dface"
                    android:layout_height="90dp"
                    android:layout_width="90dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                style="@style/button_common_blue"
                android:layout_marginTop="20dp"
                android:text="提交" />

        </LinearLayout>

    </ScrollView>

    <com.scau.easyfarm.ui.empty.EmptyLayout
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible" />
</FrameLayout>