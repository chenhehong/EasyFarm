<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_edittext"
        android:gravity="top|left|center"
        android:hint="请在此填写总结"
        android:lines="2"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/text_color_account_info"
        android:textColorHint="@color/edittext_hint_color"
        android:textSize="@dimen/text_size_account_info" />

    <EditText
        android:id="@+id/et_visitlinkman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_edittext"
        android:gravity="top|left|center"
        android:hint="请在此填写回访人姓名"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/text_color_account_info"
        android:textColorHint="@color/edittext_hint_color"
        android:textSize="@dimen/text_size_account_info" />

    <EditText
        android:id="@+id/et_visitlinkphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_edittext"
        android:gravity="top|left|center"
        android:hint="请在此填写回访人电话"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/text_color_account_info"
        android:textColorHint="@color/edittext_hint_color"
        android:textSize="@dimen/text_size_account_info" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:shadowColor="#ffffffff"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:shadowRadius="0.5"
        android:text="请填写此次服务的总结和相关信息，点击提交后将自动结束本次服务"
        android:textColor="#ffa49e88"
        android:textSize="14sp" />

</LinearLayout>